<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_layout_feed_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:orientation="vertical">

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivImg"
                    android:layout_width="@dimen/avatar_size"
                    android:layout_height="@dimen/avatar_size" />

            </RelativeLayout>

            <android.support.v4.widget.Space
                android:layout_width="@dimen/space_small"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_min" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/tvData"
                        android:maxLines="2"
                        android:textColor="@color/darkgray"
                        android:textSize="@dimen/text_size_min" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">


                        <TextView
                            android:id="@+id/tvCredit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/text_size_min" />

                        <TextView
                            android:id="@+id/tvData"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:drawableLeft="@drawable/ic_date_24dp"
                            android:drawablePadding="4dp"
                            android:drawableTint="@color/colorAccent"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_min" />

                    </RelativeLayout>

                </LinearLayout>

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_min" />

            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/Divider"
            android:layout_marginLeft="@dimen/margin_huge" />

    </LinearLayout>

</FrameLayout>